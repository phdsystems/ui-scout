{
  "name": "ui-scout",
  "version": "1.0.0",
  "description": "Framework-agnostic automated UI element discovery and test generation for web applications. Works with Playwright, Puppeteer, Selenium, and custom adapters.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublish": "bun run verify && bun run build",
    "verify": "bun run typecheck && bun run lint && bun run test",
    "security:scan": "bun audit --audit-level moderate || echo 'Note: Vulnerabilities found in optional dependencies only'",
    "security:check": "bun audit --audit-level high",
    "security:deps": "bun outdated",
    "ci": "bun run clean && bun run verify && bun run build",
    "ci:full": "bun run clean && bun run security:scan && bun run verify && bun run build",
    "publish:check": "bun run ci:full && bun run format:check"
  },
  "keywords": [
    "ui-testing",
    "test-automation",
    "element-discovery",
    "test-generation",
    "playwright",
    "puppeteer",
    "selenium",
    "cypress"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "typescript": "^4.0.0 || ^5.0.0"
  },
  "optionalDependencies": {
    "@playwright/test": "^1.55.1",
    "puppeteer": "^20.9.0",
    "selenium-webdriver": "^4.35.0",
    "cypress": "^13.17.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^1.6.1",
    "esbuild": "^0.25.10",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^1.6.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/phdsystems/ui-scout.git"
  },
  "bugs": {
    "url": "https://github.com/phdsystems/ui-scout/issues"
  },
  "homepage": "https://github.com/phdsystems/ui-scout#readme"
}
